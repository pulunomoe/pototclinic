{% extends "base.twig" %}
{% import "macros.twig" as m %}

{% block nursesActive %}
    font-bold text-red-500
{% endblock %}

{% block main %}
    {{ m.header("Nurse Info", [
        {link: "/nurses", label: "Back"},
        {link: "/nurses/"~nurse.id~"/edit", label: "Edit"},
        {link: "/nurses/"~nurse.id~"/delete", label: "Delete"}
    ]) }}
    <div class="mt-2 flex flex-row items-start justify-between">
        {{ m.list([
            {label: "Name", data: nurse.name},
            {label: "Description", data: nurse.description}
        ]) }}
    </div>
{% endblock %}